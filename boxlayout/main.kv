<Container>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint: 1, .3
        canvas:
            Color:
                rgb: 0, 0, 0
            Rectangle: 
                size: self.size
                pos: self.pos
    BoxLayout:
        size_hint: 1, .5
        canvas:
            Color:
                rgb: 0.5, 0.5, 0.5
            Rectangle: 
                size: self.size
                pos: self.pos

    BoxLayout:
        size_hint: 1, .2
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle: 
                size: self.size
                pos: self.pos                
